package Lab3;

import java.util.Arrays;
import java.util.Scanner;

public class removeDupe {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		String sentence;
		System.out.println("Enter the sentence you want to remove duplicate characters from: ");
		sentence = in.next();
		char str[] = sentence.toCharArray();
		int n = str.length;
		System.out.println(removeDupe(str, n));
	}
	
	public static String removeDupe(char str[], int n) {
		int  index = 0;
		
		for (int i = 0; i < n; i++){
			int j;
			for (j = 0; j < i; j++) {
				if(str[i] == str[j]) {
					break;
				}
			}
			if (j == i) {
				str[index++] = str[i];
			}
		}
		return String.valueOf(Arrays.copyOf(str, index));
	}
}
