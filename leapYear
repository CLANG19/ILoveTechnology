package Lab2;

import java.util.Scanner;

public class leapYear {

	public static void main(String[] args) {
		int year;
		Scanner in = new Scanner(System.in);
		System.out.println("Enter a 4 digit year to determine if it is a leap year: ");
		year = in.nextInt();
		boolean isLeap = false;
		
		if(year % 4 == 0)
		{
			if(year % 100 == 0)
			{
				if(year % 400 == 0)
					isLeap = true;
				else
					isLeap = false;
			}
			else
				isLeap = true;
		}
		else {
			isLeap = false;
		}
		
		if(isLeap == true)
			System.out.println(year + " is a Leap Year!");
		else
			System.out.println(year + " is not a Leap year!");
	}
}
